---
interface Props {
  type?: 'info' | 'warning' | 'success' | 'error';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const typeStyles = {
  info: 'bg-blue-900/20 border-blue-500',
  warning: 'bg-yellow-900/20 border-yellow-500',
  success: 'bg-green-900/20 border-green-500',
  error: 'bg-red-900/20 border-red-500',
};

const icons = {
  info: 'ℹ️',
  warning: '⚠️',
  success: '✅',
  error: '❌',
};
---

<div class={`border-l-4 p-4 my-4 rounded ${typeStyles[type]}`}>
  {title && (
    <div class="font-semibold mb-2 flex items-center gap-2">
      <span>{icons[type]}</span>
      <span>{title}</span>
    </div>
  )}
  <div class="text-[var(--text-secondary)]">
    <slot />
  </div>
</div>
