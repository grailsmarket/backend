{
  "name": "@grails/api",
  "version": "1.0.0",
  "description": "Grails API Service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "migrate": "tsx scripts/run-migrations.ts",
    "migrate:dry-run": "tsx scripts/run-migrations.ts --dry-run",
    "migrate:force": "tsx scripts/run-migrations.ts --force"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.1",
    "@heroicons/react": "^2.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.2",
    "pg-boss": "^9.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "siwe": "^3.0.0",
    "viem": "^2.7.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10"
  }
}
