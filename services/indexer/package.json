{
  "name": "@grails/indexer",
  "version": "1.0.0",
  "description": "Blockchain indexer service for ENS and Seaport events",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "backfill-names": "npx tsx src/scripts/backfill-ens-names.ts",
    "update-names": "npm run build && node --max-old-space-size=2048 dist/indexer/src/scripts/update-ens-names.js"
  },
  "dependencies": {
    "p-queue": "^6.6.2",
    "pg-boss": "^9.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "viem": "^2.7.0"
  }
}
